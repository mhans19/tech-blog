<div class = "signup-form border border-success rounded my-2 p-2">
  <form>
    <h2 class = "text-center font-weight-bold">Sign up for a codeBloggers account</h2>
    <div class="form-group row">
      <label for="username-signup" class="col-sm-2 col-form-label font-weight-bold">Username</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="username-signup" placeholder="Username">
      </div>
    </div>
    <div class="form-group row">
      <label for="email-signup" class="col-sm-2 col-form-label font-weight-bold">Email</label>
      <div class="col-sm-10">
        <input type="email" class="form-control" id="email-signup" placeholder="Email">
      </div>
    </div>
    <div class="form-group row">
      <label for="password-signup" class="col-sm-2 col-form-label font-weight-bold">Password</label>
      <div class="col-sm-10">
        <input type="password" class="form-control" id="password-signup" placeholder="Password">
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-12">
        <button type="submit" class="btn btn-success btn-block font-weight-bold">Signup</button>
      </div>
    </div>
  </form>
</div>
<script src="/javascript/signup.js"></script>