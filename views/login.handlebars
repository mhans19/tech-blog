<div class = "login-form border border-success rounded my-2 p-2">
  <form>
    <h2 class = "text-center font-weight-bold">Login to a codeBloggers account</h2>
    <div class="form-group row">
      <label for="email-login" class="col-sm-2 col-form-label font-weight-bold">Email</label>
      <div class="col-sm-10">
        <input type="email" class="form-control" id="email-login" placeholder="Email">
      </div>
    </div>
    <div class="form-group row">
      <label for="password-login" class="col-sm-2 col-form-label font-weight-bold">Password</label>
      <div class="col-sm-10">
        <input type="password" class="form-control" id="password-login" placeholder="Password">
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-12">
        <button type="submit" class="btn btn-success btn-block font-weight-bold">Login</button>
      </div>
    </div>
  </form>
</div>
<script src="/javascript/login.js"></script>