<section class="edit-post-form">
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <form class="border border-success rounded my-2 p-2">
    <h2 class = "text-center font-weight-bold">Edit Post</h2>
    <div class="form-group row">
      <label for="post-title" class="col-sm-2 col-form-label font-weight-bold">Title</label>
      <div class="col-sm-12">
        <input name="post-title" class="form-control" type="text" value="{{post.title}}" />
      </div>
    </div>
    <div class="form-group row">
      <label for="post-body"class="col-sm-2 col-form-label font-weight-bold">Content</label>
      <div class="col-sm-12">
        <textarea name = "post-body" class="form-control" type = "text" value = "{{post.body}}">{{post.body}}</textarea>
      </div>
    </div>
    <div>
      You published this post on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <div class="form-group row">
      <div class="col-sm-12">
        <button type="submit" class="btn btn-success btn-block font-weight-bold">Save post</button>
        <button type="button" class="delete-post-btn btn btn-danger btn-block font-weight-bold">Delete post</button>
      </div>
    </div>
  </form>
  <form class="comment-form border border-success rounded my-2 p-2">
    <h2 class = "text-center font-weight-bold">New Comment</h2>
    <div class="form-group row ">
      <label for="comment-body"class="col-sm-2 col-form-label font-weight-bold">Comment</label>
      <div class="col-sm-12">
        <textarea name="comment-body" class="form-control"></textarea>
      </div>
    </div>
    <div>
      <button type="submit" class="btn btn-success btn-block font-weight-bold">Add comment</button>
    </div>
  </form>
</section>
{{> comments post.comments }}
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>